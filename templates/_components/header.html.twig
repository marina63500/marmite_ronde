<header>

	{# menu de navigation #}
	<nav class="navbar navbar-expand-lg bg-body-tertiary ">

		<div class="container-fluid">
			<a class="navbar-brand" href="#">Marmite ronde</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center">
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href="{{path('home_index')}}">Accueil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link " aria-current="page" href="{{path('recipe_index')}}">Recettes</a>
					</li>


					{# pour se connecter/déconnecter #}

					<li class="nav-item">
						{% if app.user %}
							{# user connecté #}
							<a class="nav-link " href="{{path('recipe_add')}}">
								<button class="btn btn-warning">crée une recette</button>
							</a>
							<li class="nav-item">
								<a class="nav-link " aria-current="page" href="{{path('user_recipes')}}">
									MesRecettes</a>
							</li>

							<p class="nav-link mb-0">bienvenue ,
								{{app.user.email}}</p>

							<a class="nav-link btn btn-danger" href="{{path('app_logout')}}">Se déconnecter</a>

							{# pour un admin #}
							{% if is_granted("ROLE_ADMIN")%}
								{# changer la route vers admin #}
								<a class="nav-link " href="{{path('app_admin')}}">
									<button class="btn btn-danger">aller vers admin</button>
								</a>
							{% endif %}
						{% else  %}
							<li class="nav-item">
								<a class="nav-link link-danger" href="{{path('app_login')}}">Se connecter</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_register')}}">S'enregistrer</a>
							</li>
						{% endif %}
					</li>

				</ul>
			</div>
		</div>
	</nav>

</header>
