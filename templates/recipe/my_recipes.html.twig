{# page des recettes de l'utilisateur connecté #}
{% extends 'base.html.twig' %}

{% block title %}Mes recettes{% endblock %}

{% block body %}
<div class="container">
    <h1>les superbes recettes de {{ user.pseudo }}</h1>

   
                {# text-muted class bootstrap mieux que balise small pour l'accessibilité #}
               

    <div class="recipe-list">
        {% for recipe in recipes %}
            <div class="recipe-item">
                <h2><a href="{{ path('recipe_show', {'id': recipe.id}) }}">{{ recipe.title }}</a></h2>
                <p>{{ recipe.content }}</p>
                <p>Créée le : {{ recipe.createdAt|date("d/m/Y") }}</p>
                <p>Ingrédients :
                    {% for ingredient in recipe.ingredients %}
                        {{ ingredient.name }}{% if not loop.last %}, {% endif %}
                    {% else %}
                        Aucun ingrédient
                    {% endfor %}
                </p>
            </div>
        {% else %}
            <p>Vous n'avez pas encore créé de recettes.</p>
        {% endfor %}
    </div>
{% endblock %}